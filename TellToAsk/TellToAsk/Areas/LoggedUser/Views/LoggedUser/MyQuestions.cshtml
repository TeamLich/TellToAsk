@model IEnumerable<TellToAsk.Areas.LoggedUser.Models.QuestionModel>

@(Html.Kendo().Grid(Model)
    .Name("Grid")
    .Columns(columns =>
    {
        columns.Bound(p => p.Text).Groupable(false);
        columns.Bound(p => p.Category.Name);
    })
    .Groupable()
    .Pageable()
    .Sortable()
    .Scrollable()
    .Filterable()
    .DataSource(dataSource => dataSource
        .Ajax()
        .Read(read => read.Action("GetMyQuestions", "LoggedUser")))
    )