@model IEnumerable<TellToAsk.Areas.Administration.Models.QuestionModel>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Questions</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@(Html.Kendo().Grid<TellToAsk.Areas.Administration.Models.QuestionModel>()
    .Name("questions")
    .Columns(column =>
        {
            // column.Bound(p => p.QuestionId);
            column.Bound(p => p.Text).Title("Question");
            column.Bound(p => p.Creator);
            column.Bound(p => p.AnswersCount).Title("Asnwers Count");
            column.Bound(p => p.Category);
            column.Bound(p => p.Approved).Title("Approved");            
            column.Template(p => @Html.Action("Edit", "Questions", new { id = p.QuestionId }))
                .ClientTemplate("<a href='/Administration/Questions/Edit?id=#= QuestionId #'>Edit</a> | " +
                "<a href='/Administration/Questions/Details?id=#= QuestionId #'>Details</a> | " +
                "<a href='/Administration/Questions/Delete?id=#= QuestionId #'>Delete</a>").Title("Action");
        })
     .Pageable()
     .Sortable()
     .Selectable()
     .DataSource(data => data
         .Ajax()
         .ServerOperation(true)
         .PageSize(5)
         .Events(events => events.Error("error_handler"))
         .Model(model =>
         {
             model.Id(p => p.QuestionId);

         })
         .Read(read => read.Action("Read", "Questions")))
)

<script>
    function error_handler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            alert(message);
        }
    }
   
</script>
@section Scripts{
    @Scripts.Render("~/bundles/kendo")
}
