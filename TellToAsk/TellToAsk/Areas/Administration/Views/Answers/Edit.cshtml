@model TellToAsk.Model.Answer

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset class="form-horizontal">
        <legend>Answer</legend>

        @Html.HiddenFor(model => model.AnswerId)

        <div class="control-group">
            @Html.LabelFor(model => model.Question, new { @class = "control-label" })
            <div class="controls">
                @Html.ValueFor(model => model.Question.Text)
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.Comment, new { @class = "control-label" })
            <div class="controls">
                @Html.TextAreaFor(model => model.Comment)
                @Html.ValidationMessageFor(model => model.Comment, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="control-group">
            @Html.LabelFor(model => model.IsReported, new { @class = "control-label" })
            <div class="controls">
                @Html.EditorFor(model => model.IsReported)
                @Html.ValidationMessageFor(model => model.IsReported, null, new { @class = "help-inline" })
            </div>
        </div>

        <div class="form-actions no-color">
            <input type="submit" value="Save" class="btn" />
        </div>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to Answers List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

