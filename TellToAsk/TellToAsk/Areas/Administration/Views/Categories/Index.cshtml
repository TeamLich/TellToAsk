@model IEnumerable<TellToAsk.Areas.Administration.Models.CategoryModel>

@{
    ViewBag.Title = "Categories";
}

<h2>Categories</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@(Html.Kendo().Grid<TellToAsk.Areas.Administration.Models.CategoryModel>()
    .Name("categories")
    .Columns(column =>
        {
           // column.Bound(p => p.CategoryId);
            column.Bound(p => p.Name).Width(350);
            column.Bound(p => p.AgeRating);
            column.Template(p => @Html.Action("Edit", "Categories", new { id = p.CategoryId }))
                .ClientTemplate("<a href='/Administration/Categories/Edit?id=#= CategoryId #'>Edit</a> | " +
                "<a href='/Administration/Categories/Delete?id=#= CategoryId #'>Delete</a>").Title("Action");
        })
     .Pageable()
     .Sortable()
     .Selectable()
     .DataSource(data => data
         .Ajax()
         .ServerOperation(true)
         .PageSize(5)
         .Events(events => events.Error("error_handler"))
         .Model(model =>
         {
             model.Id(p => p.CategoryId);
         })
         .Read(read => read.Action("Read", "Categories")))
         )

<script>
    function error_handler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            alert(message);
        }
    }

    $(document).ready(function () {
        $("#categories").css("width", 500);
    });
</script>

@section Scripts {
    @Scripts.Render("~/bundles/kendo")
}
        
